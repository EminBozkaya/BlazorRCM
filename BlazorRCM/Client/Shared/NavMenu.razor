            <MudNavGroup Title="Satışlar" Icon=@Icons.Filled.PointOfSale>
                <MudNavLink Href="#" Icon=@Icons.Filled.Restaurant IconColor="Color.Success">Hızlı Satış</MudNavLink>
                <MudNavLink Href="#" Icon=@Icons.Filled.DeliveryDining IconColor="Color.Info">Paket Satışı</MudNavLink>
